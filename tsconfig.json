{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"],
      "@sb/*": [".storybook/*"]
    },

    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2015",

    "noEmit": true,
    "noEmitOnError": true,

    "jsx": "react-jsx",
    "types": ["node", "react", "jest"],
    "typeRoots": ["node_modules", "typing"],

    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "downlevelIteration": true,

    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "config",
    "src",
    "typing",
    ".jest/**/*",
    ".storybook/**/*",
    "babel-plugin-macros.config.js",
    "gatsby-{browser,config,node}.{js,ts}",
    "jest.config.ts",
    ".eslintrc.js",
    ".prettierrc.js"
  ],
  "exclude": ["node_modules", "src/pages", "src/data"]
}
